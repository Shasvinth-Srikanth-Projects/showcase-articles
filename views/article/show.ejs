<Style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap');
body {
    background-color: #21201d;
    font-family: 'Poppins', sans-serif;
    color: #FFFFFF;
}


a {
    text-decoration: none;
}

.heading a {
    background-color: aliceblue;
    border: 1px black;
    border-radius: 15%;
    padding: 9px 9px 9px 9px;
}

.single_post {

    text-align: center;
}
</Style>



<div class="container">
  <div class="heading">
    <br>
    <a href="/">Home</a>
  </div>
  <br />
  <div class="single_post">
    <h1><%= article.title %></h1>
    <p><%= article.des %></p>
    <b> <%= article.info %></b>
    <h5 class="date"><i><%= article.createdAt.toLocaleDateString() %></i></h5>
  </div>
</div>
