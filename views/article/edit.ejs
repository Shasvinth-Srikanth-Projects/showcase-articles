<div class="container">
    <div class="heading">
      <br>
      <a href="/" class="btn btn_success">Home</a>
    </div>
    <br><br><br>
    <div class="form">
      <div class="side_img"></div>
      <div class="form_container">
        <form action="/article/edit/<%= article.id %> " method="post">
          <input
            type="text"
            name="title"
            placeholder="Title...................."
            value="<%= article.title %> "
          />
          <br>
          <br>
          <textarea
            name="des"
            id=""
            cols="90"
            rows="30"
            placeholder="Your Post.................."
          ><%= article.des %> </textarea>
          <br>
          <br>
          <textarea
            name="info"
            id=""
            cols="90"
            rows="30"
            placeholder="More info................."
          ><%= article.info %> </textarea>
          <br>
          <button class="btn" type="submit">Update</button>
        </form>
      </div>
    </div>
  </div>
  